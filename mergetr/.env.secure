# .env.secure - Configuration sécurisée pour la production
# ⚠️ Ce fichier contient des secrets - Ne JAMAIS le commiter !

# === CONFIGURATION BASE DE DONNÉES ===
POSTGRES_VERSION=14
POSTGRES_USER=admin
POSTGRES_PASSWORD=Super_Secure_DB_Password_2024!
POSTGRES_DB=db_transcendence

# === VAULT CONFIGURATION ===
VAULT_TOKEN=secure_vault_root_token_change_me

# === JWT SECRETS ===
# Généré avec: openssl rand -base64 64
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long_change_in_production_with_openssl_rand

# === SERVER CONFIG ===
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# === DATABASE URL ===
DATABASE_URL=postgresql://admin:Super_Secure_DB_Password_2024!@db:5432/db_transcendence

# === OAUTH 42 ===
CLIENT_ID_42=your_42_client_id_from_intra
CLIENT_SECRET_42=your_42_client_secret_from_intra
REDIRECT_URI=https://localhost/auth/42/callback

# === OAUTH GITHUB ===
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=https://localhost/auth/github/callback

# === OAUTH GOOGLE ===
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://localhost/auth/google/callback

# === EMAIL CONFIGURATION FOR 2FA ===
MAIL_HOST=smtp.gmail.com
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_gmail_app_password

# === SÉCURITÉ ===
ALLOWED_ORIGINS=https://localhost,https://127.0.0.1,https://your-domain.com
SALT_ROUNDS=12

# === CONFIGURATION AVANCÉE ===
# Rate limiting
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_WINDOW=900000

# Session
SESSION_SECRET=another_super_secure_session_secret_change_me

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

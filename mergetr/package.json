{
  "name": "ft_transcendence",
  "version": "1.0.0",
  "description": "42 ft_transcendence project - A web application with Pong game",
  "type": "module",
  "scripts": {
    "start": "node backend/src/server.js",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run dev",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:all": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "migrate": "node backend/scripts/migrate.js",
    "test:http": "httpyac \"backend/REST client tests/**/*.http\" --env local --bail",
    "build": "cd frontend && npm run build",
    "build:all": "npm run build",
    "install:deps": "cd backend && npm install && cd ../frontend && npm install",
    "setup": "npm install && npm run install:deps && echo 'Setup completed! Use npm run start:dev to start both services'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "httpyac": "^6.16.7"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.2.0",
    "@tailwindcss/vite": "^4.0.0-alpha.5",
    "autoprefixer": "^10.4.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.5.0",
    "gl-matrix": "^3.4.3",
    "nodemailer": "^7.0.5",
    "nodemon": "^3.1.10",
    "ogl": "^1.0.11",
    "pg": "^8.16.3",
    "postcss": "^8.4.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "recharts": "^2.12.7",
    "tailwindcss": "^3.4.0"
  }
}

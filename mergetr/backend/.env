# PostgreSQL
POSTGRES_VERSION=14
POSTGRES_USER=admin
POSTGRES_PASSWORD=test
POSTGRES_DB=db_transcendence
DB_HOST=localhost
DB_PORT=5434

# JWT Secret
SUPER_SECRET_CODE=your_super_secret_jwt_key_here_change_in_production
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Server Config
PORT=3000
HOST=0.0.0.0

# Database URL for backend
DATABASE_URL=postgresql://admin:test@localhost:5434/db_transcendence

# OAuth 42
CLIENT_ID_42=your_42_client_id
CLIENT_SECRET_42=your_42_client_secret
REDIRECT_URI=http://localhost:3000/auth/42/callback

# OAuth GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# OAuth Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Email Configuration for 2FA
MAIL_HOST=smtp.gmail.com
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password
